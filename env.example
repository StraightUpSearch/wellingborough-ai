# Wellingborough.ai Environment Configuration

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/wellingborough_ai"
DIRECT_URL="postgresql://username:password@localhost:5432/wellingborough_ai"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-nextauth-secret-key-here"

# Google APIs
GOOGLE_PLACES_API_KEY="your-google-places-api-key"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Facebook/Meta APIs
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
FACEBOOK_ACCESS_TOKEN="your-facebook-access-token"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key"
OPENAI_ORGANIZATION="your-openai-organization-id"

# Mapbox Configuration
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# Email Configuration (for notifications and marketing)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@wellingborough.ai"

# File Upload Configuration
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Payment Processing (for premium subscriptions)
STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxx"
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxx"

# Local Development Settings
NODE_ENV="development"
PORT="3000"

# RSS Feed URLs
NORTHANTS_LIVE_RSS="https://northantslive.news/?service=rss"
WELLINGBOROUGH_COUNCIL_RSS="https://wellingboroughtowncouncil.gov.uk/feed/"

# AI Content Generation Settings
AI_CONTENT_TEMPERATURE="0.7"
AI_MAX_TOKENS="500"
AI_MODEL="gpt-3.5-turbo"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="60"
RATE_LIMIT_WINDOW_MS="60000"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="combined"

# Security
BCRYPT_ROUNDS="12"
JWT_EXPIRY="7d"
CORS_ORIGIN="http://localhost:3000"

# Feature Flags
ENABLE_AI_CONTENT="true"
ENABLE_LEAFLET_CAMPAIGNS="true"
ENABLE_PREMIUM_FEATURES="true"
ENABLE_ANALYTICS="true" 